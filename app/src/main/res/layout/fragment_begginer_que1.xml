<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/questionwall"
    tools:context=".Average_que1">

    <TextView
        android:id="@+id/score_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score:0"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_view1"
        android:text="Question:1/6"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/score_view1"
        android:text="00:30"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_count"
        android:layout_marginTop="40dp"
        android:text="What Are Three Primary Colors?"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="395dp"
        android:layout_height="61dp"
        android:layout_below="@id/recyclerview"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4E97EA"
        android:text="Next"
        android:textColor="#ffffff" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#4E97EA"
        app:shapeAppearanceOverlay="@style/FabShape1"
        app:tint="#ffffff"
        android:src="@drawable/ic_baseline_home_24" />

</RelativeLayout>
